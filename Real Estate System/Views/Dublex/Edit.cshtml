@model Real_Estate_System.Models.Dublex
@{
    ViewData["Title"] = "Edit";
}
<div style="margin-top:20px;">
    <h3>Edit Apartment</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" readonly class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Area" class="control-label"></label>
                    <input type="number" asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="radio" id="cash" name="Payment" value="cash">
                    <label>Cash</label><br>
                    <input type="radio" id="installment" name="Payment" value="installment">
                    <label for="installment">Installment</label><br>
                    <span asp-validation-for="Payment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Informations" class="control-label"></label>
                    <input asp-for="Informations" class="form-control" />
                    <span asp-validation-for="Informations" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input type="number" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input type="number" asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <input type="file" name="Files" multiple="multiple" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>*@
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
            </form>
        </div>
    </div>     
    </div>