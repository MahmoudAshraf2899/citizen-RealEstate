@model Real_Estate_System.Models.Dublex
@{
    ViewData["Title"] = "Details";
}
<div style="margin-bottom:20px;">
    <div>
        <h3 style="margin:20px; margin-left:3px;">Apartment Details</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Area)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Area)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Payment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Payment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Informations)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Informations)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            @if (Model.ImageUrl != null)
            {
                <dt class="col-sm-2">
                    Images
                </dt>
                <dd class="col-sm-10">
                    @{ if (Model.ImageUrl != null)
                        {
                            string[] allFilesName = Model.ImageUrl.Split("$$##");

                            foreach (var img in allFilesName)
                            {
                                <img src="~/uploads/@img" style="width:373px; height:188px;" class="img-rounded" />
                            }
                        }
                    }
                </dd>
            }
        </dl>
    </div>
    @if (User.IsInRole("Admin") || User.IsInRole("Sales"))
    {
        <div style="margin-top:50px;">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    }
    </div>